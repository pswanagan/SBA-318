<!DOCTYPE html>
<html>
<head>
    <title>Animals</title>
    <link rel="stylesheet" type="text/css" href="/style.css">
</head>
<body>
    <h1>Animals and Their Keepers</h1>
    <table>
        <tr>
            <th>Animal Name</th>
            <th>Scientific Name</th>
            <th>Keeper First Name</th>
            <th>Keeper Last Name</th>
        </tr>
        <% animalsWithKeepers.forEach(animalWithKeeper => { %>
            <% if (animalWithKeeper.animal && animalWithKeeper.keeper) { %>
                <tr>
                    <td><%= animalWithKeeper.animal.name %></td>
                    <td><%= animalWithKeeper.animal.sci_Name %></td>
                    <td><%= animalWithKeeper.keeper.first %></td>
                    <td><%= animalWithKeeper.keeper.last %></td>
                </tr>
            <% } %>
        <% }); %>
    </table>

    <h2>Add a New Keeper</h2>
    <form action="/keepers" method="post">
        <label for="first">First Name:</label>
        <input type="text" id="first" name="first"><br><br>

        <label for="last">Last Name:</label>
        <input type="text" id="last" name="last"><br><br>

        <label for="gender">Gender:</label>
        <input type="text" id="gender" name="gender"><br><br>

        <input type="submit" value="Submit">
    </form>
</body>
</html>